<div id="page-wrapper">
    <% unless me.photo? -%>
        <div id="warning">
            <p>You need to choose a photo before you show up in the game and can be on the highscore! <%= link_to "Choose one now!", edit_your_user_path %></p>
        </div>
    <% end -%>
    <ul id="peeps">
        <% @users.sort_by{rand}.each do |user| %>
            <% if user.photo? %>
                <li>
                    <%= image_tag(user.photo, :alt => user.name, :class => "index-photos ui-droppable", "data-name" => user.name) %>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>
<div id="game-sidebar">
    <%= render :partial => "users/game/names_sidebar" %>
</div>
<div id="preloader">
    <%= image_tag "thumbs-up.png" %>
    <%= image_tag "thumbs-down.png" %>
    <%= image_tag "team.jpg" %>
</div>
<div id="edit" style="display:none;"></div>
<%= render :partial => "users/game/win" %>
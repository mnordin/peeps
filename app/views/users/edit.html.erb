<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <% if @photos %>
      <% @photos.each do |photo| %>
        <label>
            <%= image_tag photo[3].source %>
            <%= f.radio_button :photo_url, photo[0].source %>
        </label>
      <% end %>
  <% else %>
    <%= link_to "Get images from Facebook", "/auth/facebook" %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>




